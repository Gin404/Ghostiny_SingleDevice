<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".multi.MultiNumberActivity">

    <RadioGroup
        android:id="@+id/radioGroup1_m"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/icon_number3_m"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:textColor="#fff"
            android:textSize="22sp"
            android:background="@drawable/radio_background"
            android:button="@null"
            android:gravity="center"
            android:text="@string/three" />

        <RadioButton
            android:id="@+id/icon_number4_m"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:textColor="#fff"
            android:textSize="22sp"
            android:background="@drawable/radio_background"
            android:button="@null"
            android:gravity="center"
            android:text="@string/four" />

        <RadioButton
            android:id="@+id/icon_number5_m"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:textColor="#fff"
            android:textSize="22sp"
            android:background="@drawable/radio_background"
            android:button="@null"
            android:gravity="center"
            android:text="@string/five" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/radioGroup2_m"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup1_m">

        <RadioButton
            android:id="@+id/icon_number6_m"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/radio_background"
            android:button="@null"
            android:textColor="#fff"
            android:textSize="22sp"
            android:gravity="center"
            android:layout_margin="20dp"
            android:text="@string/six" />

        <RadioButton
            android:id="@+id/icon_number7_m"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/radio_background"
            android:button="@null"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="22sp"
            android:layout_margin="20dp"
            android:text="@string/seven" />

        <RadioButton
            android:id="@+id/icon_number8_m"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/radio_background"
            android:button="@null"
            android:textColor="#fff"
            android:textSize="22sp"
            android:gravity="center"
            android:layout_margin="20dp"
            android:text="@string/eight" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/radioGroup3_m"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup2_m">

        <RadioButton
            android:id="@+id/icon_number9_m"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/radio_background"
            android:button="@null"
            android:textColor="#fff"
            android:textSize="22sp"
            android:gravity="center"
            android:layout_margin="20dp"
            android:text="@string/nine" />

        <RadioButton
            android:id="@+id/icon_number10_m"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/radio_background"
            android:button="@null"
            android:textColor="#fff"
            android:textSize="22sp"
            android:gravity="center"
            android:layout_margin="20dp"
            android:text="@string/ten" />

        <RadioButton
            android:id="@+id/icon_number11_m"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:background="@drawable/radio_background"
            android:button="@null"
            android:textColor="#fff"
            android:textSize="22sp"
            android:gravity="center"
            android:text="@string/eleven" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/radioGroup4_m"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="402dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup3_m"
        app:layout_constraintVertical_bias="0.0">

        <RadioButton
            android:id="@+id/icon_number12_m"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/radio_background"
            android:button="@null"
            android:textColor="#fff"
            android:textSize="22sp"
            android:gravity="center"
            android:layout_margin="20dp"
            android:text="@string/twelve" />

    </RadioGroup>


    <Button
        android:id="@+id/start_m"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/button_bg"
        android:text="@string/start"
        android:textAllCaps="false"
        android:textColor="#2c2c2c"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup4_m"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView_title5_m"
        android:layout_width="171dp"
        android:layout_height="72dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:text="@string/instruction"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/imageView2_m"
        android:layout_width="90dp"
        android:layout_height="55dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="#00000000"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/button_return"/>

</android.support.constraint.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/icon_home_instruction"
        android:layout_width="131dp"
        android:layout_height="83dp"
        android:layout_marginLeft="148dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:src="@drawable/button_intro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/icon_home_setting"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/icon_home_multiplayer"
        android:layout_width="170dp"
        android:layout_height="147dp"
        android:layout_below="@+id/icon_home_instruction"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="444dp"
        android:layout_marginBottom="45dp"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:src="@drawable/button_multiplay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@id/icon_home_SingleGame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/icon_home_instruction" />

    <ImageButton
        android:id="@+id/icon_home_SingleGame"
        android:layout_width="160dp"
        android:layout_height="130dp"
        android:layout_below="@+id/icon_home_instruction"
        android:layout_marginTop="472dp"
        android:layout_marginBottom="47dp"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:src="@drawable/button_singleplay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintRight_toLeftOf="@id/icon_home_multiplayer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/icon_home_setting" />

    <ImageButton
        android:id="@+id/icon_home_setting"
        android:layout_width="114dp"
        android:layout_height="72dp"
        android:layout_below="@+id/icon_home_instruction"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:src="@drawable/button_setting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>
